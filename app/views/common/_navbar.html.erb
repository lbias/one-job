<header id="home" data-spy="scroll" data-target="#top-nav">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="navbar navbar-default navbar-fixed-top default-menu menu-4" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <!-- Logo -->
            <%= link_to root_path, class: "navbar-brand default-logo scroll" do %>
              <%= image_tag("logo.png", :class => "logo_img") %> 职赢网
            <% end %>
            <!-- 账户相关 -->
            <ul class="nav navbar-nav navbar-right">
              <li class="divider" role="separator"></li>
                <% if !current_user %>
                  <li><%= button_to("登录", new_user_session_path, method: :get, class: "btn btn-default navbar-btn") %></li>
                  <li><%= button_to("注册", new_user_registration_path, method: :get, class: "btn btn-default navbar-btn") %> </li>
                <% else %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <%= current_user.email %>，你好！
                      <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <% if current_user.admin? %>
                        <li> <%= link_to("企业后台", admin_jobs_path) %> </li>
                        <li class="divider"> </li>
                      <% end %>
                        <li> <%= link_to("我的收藏", account_collections_path) %> </li>                      
                        <li> <%= link_to("投递历史", account_resumes_path) %> </li>
                        <li class="divider" role="separator"></li>
                        <li> <%= link_to("退出", destroy_user_session_path, method: :delete) %> </li>
                    </ul>
                  </li>
                <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
